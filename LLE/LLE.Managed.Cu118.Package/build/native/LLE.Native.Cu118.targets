<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="LowLight_CopyNativeDlls" AfterTargets="Build">
    <ItemGroup>
      <_LowLightDlls Include="$(MSBuildThisFileDirectory)bin\$(Platform)\*.dll" />
    </ItemGroup>

    <MakeDir Directories="$(OutDir)" Condition="!Exists('$(OutDir)')" />

    <Copy
      SourceFiles="@(_LowLightDlls)"
      DestinationFolder="$(OutDir)"
      SkipUnchangedFiles="false" />
  </Target>
</Project>